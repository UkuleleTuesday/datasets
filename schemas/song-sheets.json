{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "UT Song Sheets Dataset",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["properties", "id", "name"],
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the song sheet"
      },
      "name": {
        "type": "string",
        "description": "Display name of the song sheet"
      },
      "properties": {
        "type": "object",
        "required": ["artist", "song", "status", "tabber"],
        "properties": {
          "artist": {
            "type": "string",
            "description": "Artist name"
          },
          "song": {
            "type": "string",
            "description": "Song title"
          },
          "status": {
            "type": "string",
            "enum": ["APPROVED", "READY_TO_PLAY", "DRAFT", "REJECTED"],
            "description": "Status of the song sheet"
          },
          "tabber": {
            "type": "string",
            "description": "Person who created the tab"
          },
          "bpm": {
            "type": "string",
            "pattern": "^[0-9]+(,[0-9]+)*$",
            "description": "Beats per minute, comma-separated for multiple tempos"
          },
          "chords": {
            "type": "string",
            "description": "Comma-separated list of chords used"
          },
          "date": {
            "type": "string",
            "pattern": "^[0-9]{8}$",
            "description": "Date in YYYYMMDD format"
          },
          "difficulty": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+$",
            "description": "Difficulty rating as decimal string"
          },
          "duration": {
            "type": "string",
            "pattern": "^[0-9]{2}:[0-9]{2}:[0-9]{2}$",
            "description": "Duration in HH:MM:SS format"
          },
          "gender": {
            "type": "string",
            "enum": ["male", "female", "duet", "ensemble", "instrumental"],
            "description": "Gender of the original artist(s)"
          },
          "language": {
            "type": "string",
            "description": "Language of the song lyrics"
          },
          "source": {
            "type": "string",
            "enum": ["new", "old", "off"],
            "description": "Source category of the song"
          },
          "specialbooks": {
            "type": "string",
            "description": "Comma-separated list of special books this song appears in"
          },
          "time_signature": {
            "type": "string",
            "pattern": "^[0-9]+/[0-9]+$",
            "description": "Time signature in format like 4/4"
          },
          "type": {
            "type": "string",
            "enum": ["Person", "Group", "person", "group"],
            "description": "Whether the artist is a person or group"
          },
          "year": {
            "type": "string",
            "pattern": "^[0-9]{4}$",
            "description": "Year the song was released"
          },
          "features": {
            "type": "string",
            "description": "Additional features or notes about the song"
          }
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  }
}